/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835", "brcm,bcm2711";

    fragment@0 {
        target = <&i2c1>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            bmp390@76 {
                compatible = "bosch,bmp390";
                reg = <0x76>;  /* ADO low */
                interrupt-parent = <&gpio>;
                interrupts = <17 1>;  /* GPIO17 rising edge */
                vdd-supply = <&vdd_3v3>;  /* Assume regulator */
            };
            bmp390@77 {
                compatible = "bosch,bmp390";
                reg = <0x77>;  /* ADO high */
                interrupt-parent = <&gpio>;
                interrupts = <17 1>;
                vdd-supply = <&vdd_3v3>;
            };
        };
    };

    fragment@1 {
        target = <&spi0>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            bmp390@0 {
                compatible = "bosch,bmp390";
                reg = <0>;
                spi-max-frequency = <1000000>;
                interrupt-parent = <&gpio>;
                interrupts = <17 1>;
                vdd-supply = <&vdd_3v3>;
            };
        };
    };
};